{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
